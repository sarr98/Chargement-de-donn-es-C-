                                                            </table>
                                                            @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                                                            {
                                                            <div class="alert alert-success" style="color: green;">
                                                                @ViewBag.SuccessMessage
                                                            </div>
                                                            }
                                                        </form>

                                                    </div>
                                                </td>
                                            </tr>
                                        </table>

                                    </div>
                                </td>
                            </tr>
                            <tr>

                                <td>
                                    <table width="100%" border="1" align="center" bordercolor="#000066" cellspacing="6">
                                        <tr>
                                            <td bordercolor="#FFFFFF" valign="top" bgcolor="#003399" height="2" class="TTxt">
                                                <div align="center" class="TLien2">
                                                    copyright Gainde 2000
                                                </div>
                                    </table>
